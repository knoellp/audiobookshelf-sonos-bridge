# ===========================================
# Audiobookshelf Sonos Bridge Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Required: Audiobookshelf server URL
BRIDGE_ABS_URL=http://your-audiobookshelf-server:13378

# Required: Public URL where this bridge is accessible (for Sonos to reach)
BRIDGE_PUBLIC_URL=http://your-server-ip:8080

# Required: Secret for session encryption (generate a random string, min 32 chars)
BRIDGE_SESSION_SECRET=change-this-to-a-long-random-string-at-least-32-chars

# Optional: Port to listen on (default: 8080)
BRIDGE_PORT=8080

# Optional: Number of transcoding workers (default: 2)
BRIDGE_TRANSCODE_WORKERS=2

# Optional: Log level: debug, info, warn, error (default: info)
BRIDGE_LOG_LEVEL=info

# Optional: Stream token TTL (default: 24h)
BRIDGE_STREAM_TOKEN_TTL=24h

# ===========================================
# Volume Paths (for docker-compose)
# ===========================================

# Path to your media files (audiobooks)
MEDIA_PATH=/path/to/your/audiobooks

# Path to store transcoded cache files
CACHE_PATH=./data/cache

# Path to store configuration and database
CONFIG_PATH=./data/config
